// 文章卡片磨砂玻璃质感（深色适配）
.post.white-box
  background rgba(30, 30, 30, 0.65) !important
  background-color rgba(30, 30, 30, 0.65) !important

  backdrop-filter blur(12px)
  -webkit-backdrop-filter blur(12px)

  background-image none !important
  border 1px solid rgba(255, 255, 255, 0.1)

// 可选：文章内描述区同步磨砂
.post .article-desc
  background: transparent !important
  backdrop-filter: none !important
  
// 顶部导航栏 · 深色磨砂玻璃
#l_header.l_header
  background rgba(25, 25, 25, 0.7) !important
  background-color rgba(25, 25, 25, 0.7) !important
  background-image none !important

  backdrop-filter blur(10px) saturate(150%)
  -webkit-backdrop-filter blur(10px) saturate(150%)

  border-bottom 1px solid rgba(255, 255, 255, 0.08)
  box-shadow 0 4px 20px rgba(0, 0, 0, 0.4)
  
// 侧边栏 Widget · 深色磨砂玻璃
#l_side .widget
  background rgba(35, 35, 35, 0.65) !important
  background-color rgba(35, 35, 35, 0.65) !important
  background-image none !important

  backdrop-filter blur(12px) saturate(130%)
  -webkit-backdrop-filter blur(12px) saturate(130%)

  border-radius 16px
  border 1px solid rgba(255, 255, 255, 0.08)
  box-shadow 0 6px 24px rgba(0, 0, 0, 0.3)
